FROM node:20.10.0

# Set working directory
WORKDIR /usr/src/avto-salon

# Copy package files
COPY package*.json ./

# Install dependencies with npm (more reliable for Docker)
# Add retry logic and timeout settings for network issues
RUN npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm config set fetch-retries 5 && \
    npm install --legacy-peer-deps --timeout=300000

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
